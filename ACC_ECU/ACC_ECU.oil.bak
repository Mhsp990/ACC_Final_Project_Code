OIL_VERSION = "2.5" : "ECM" ;

CPU ECM {    
  OS config {
    STATUS = STANDARD;
    BUILD = TRUE {	
	  TRAMPOLINE_BASE_PATH 	= "../../..";
      APP_NAME 			 	= "image";
      APP_SRC	  			= "ACC_ECU.cpp";
      CPPCOMPILER			= "avr-g++";
      COMPILER 				= "avr-gcc";
      LINKER 				= "avr-gcc";
      ASSEMBLER 			= "avr-gcc";
      COPIER 				= "avr-objcopy";
      SYSTEM 				= PYTHON;	  
      LIBRARY 				= serial; 
      LIBRARY 				= mcp_can;      
    };
	SYSTEM_CALL = TRUE;
};


	APPMODE stdAppMode {};
  
	ALARM alarmeCan_Receive {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { 
			TASK = Can_Receive;
		};  
		AUTOSTART = TRUE {
			ALARMTIME = 101;
			CYCLETIME = 80;
			APPMODE = stdAppMode;
		};
	};
	
	TASK Can_Receive {
		PRIORITY = 12;
		AUTOSTART = FALSE;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 128;
	};
	
	
	ALARM alarmeLogic_block {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { 
		TASK = Logic_block;
		};  
			AUTOSTART = TRUE {
			ALARMTIME = 80;
			CYCLETIME = 100;
			APPMODE = stdAppMode;
		};
	};	
	
	TASK Logic_block {
		PRIORITY = 11;
		AUTOSTART = FALSE;
		ACTIVATION = 1;
		SCHEDULE = FULL;
		STACKSIZE = 256;
	}; 


	ALARM alarmeCalculate_ACC_Acceleration {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { 
		TASK = Calculate_ACC_Acceleration;
		};  
			AUTOSTART = TRUE {
			ALARMTIME = 1000;
			CYCLETIME = 120;
			APPMODE   = stdAppMode;
		};
	};	
	
	TASK Calculate_ACC_Acceleration {
		PRIORITY   = 10;
		AUTOSTART  = FALSE;
		ACTIVATION = 1;
		SCHEDULE   = FULL;
		STACKSIZE  = 256;
	}; 

	
	RESOURCE res1{
		RESOURCEPROPERTY = STANDARD;
	};
};